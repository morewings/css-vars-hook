{
  "name": "css-vars-hook",
  "version": "0.6.3",
  "license": "MIT",
  "private": false,
  "engines": {
    "node": ">=16"
  },
  "description": "css-vars-hook contains React hooks to set and manipulate CSS custom properties from React component.",
  "keywords": [
    "react",
    "reactjs",
    "hooks",
    "css",
    "css-vars",
    "css-in-js"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/morewings/css-vars-hook",
    "directory": "/"
  },
  "homepage": "https://morewings.github.io/css-vars-hook",
  "bugs": {
    "url": "https://github.com/morewings/css-vars-hook/issues"
  },
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/css-vars-hook.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:code": "rm -rf dist && npx rollup -c",
    "build:lib": "yarn build:code & yarn types:extract",
    "lint:code": "npx eslint ./src/",
    "fix:code": "yarn lint:code --fix",
    "lint:tsc": "tsc --pretty --noEmit",
    "clean": " rm -rf ./types/ ./temp/",
    "types:extract": "yarn clean && tsc --project tsconfig.types.json && api-extractor run --verbose && yarn clean",
    "types:md": "api-documenter markdown -i ./api -o ./docs",
    "docs:build": "yarn types:extract && yarn types:md",
    "prepublishOnly": "yarn build:lib",
    "prepare": "is-ci || husky install"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "@microsoft/api-documenter": "^7.21.5",
    "@microsoft/api-extractor": "^7.34.4",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-typescript": "^11.0.0",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "14.0.0",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/user-event": "14.4.3",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.6",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@yelo/rollup-node-external": "^1.0.1",
    "autoprefixer": "9.8.8",
    "eslint-config-prettier": "8.6.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-ssr-friendly": "^1.2.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "lint-staged": "13.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-scripts": "5.0.1",
    "react-test-renderer": "18.2.0",
    "recursive-copy": "2.0.14",
    "rimraf": "4.3.0",
    "rollup": "^3.18.0",
    "rollup-plugin-dts": "^5.2.0",
    "typescript": "^4.9.5"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  }
}
